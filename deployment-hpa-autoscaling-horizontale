apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx
spec:
  replicas: 2
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
        - name: nginx
          image: nginx:1.14.2
          ports:
            - containerPort: 80
          resources:
            limits:
               memory: 200Mi
            requests:
               memory: 100Mi
---
apiVersion: v1
kind: Service
metadata:
  name: servicedoumbiss
spec:
  type: NodePort
  selector:
    app: nginx
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
---
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: php-apache
spec:
  scaleTargetRef: # ici on donne les reference du deployment qui doit etres scal√©
    apiVersion:  apps/v1
    kind: Deployment
    name: nginx # cest le nom du deployment
  minReplicas: 1 # ici c'est le nombre minim de replicas, pod
  maxReplicas: 10 # ici c'est le nombre maximum de replicas, de pod
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
                      
