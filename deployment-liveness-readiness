apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx
spec:
  replicas: 2
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
        - name: nginx
          image: nginx:1.14.2
          ports:
            - containerPort: 80
          args:
          - /bin/sh
          - -c
          - touch /tmp/production.txt; sleep 30; rm -f /tmp/production.txt; sleep 600
          livenessProbe: #### liveness permet de checker le pod est en bonne santé. si liveness echoué, kubernetes va creer un nouveau pod pour le remplacer 
            exec:
               command:
               - cat
               - /tmp/productionn.txt
            initialDelaySeconds: 5
            periodSeconds: 1
---
apiVersion: v1
kind: Service
metadata:
  name: servicedoumbiss
spec:
  type: NodePort
  selector:
    app: nginx
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
